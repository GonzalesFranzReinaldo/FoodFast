        <TextView
            android:id="@+id/textView3"
            android:layout_width="346dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:fontFamily="cursive"
            android:text="Bienvenido a nuestro Local"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="374dp"
            android:layout_height="292dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/tienda_1" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="319dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:fontFamily="casual"
            android:text="Felices de contar con un ambiente confortable y familiar para que pases los mejores moentos  con la gente que amas."
            android:textAlignment="viewStart"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView13" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="360dp"
            android:layout_height="218dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:srcCompat="@drawable/tienda_fondo" />



        <TextView
            android:id="@+id/tv_contacto"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:text="Contáctanos a nuestro teléfono fijo 56-74356"
            app:layout_constraintTop_toBottomOf="@+id/imageView15"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="#F49657"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/btn_consulta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encuentranos en:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/color_morado"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_contacto"/>

            <TextView
                android:id="@+id/tv_consulta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:gravity="center"
                android:background="@color/color_gray"
                app:layout_constraintTop_toTopOf="@+id/btn_consulta"
                android:layout_marginTop="33dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>