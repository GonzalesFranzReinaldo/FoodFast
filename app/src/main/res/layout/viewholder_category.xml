<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:background="@drawable/cat_background1"
    android:layout_margin="8dp">



    
<!--    android:background="@drawable/cat_background1"-->

    <ImageView
        android:id="@+id/ivCategory_1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cat_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tvCategoryName_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza"
        app:layout_constraintTop_toBottomOf="@id/ivCategory_1"
        app:layout_constraintEnd_toEndOf="@id/ivCategory_1"
        app:layout_constraintStart_toStartOf="@id/ivCategory_1"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="bold"/>





    <FrameLayout
        android:layout_width="112dp"
        android:layout_height="170dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="32dp"
        android:elevation="10dp"
        android:background="@drawable/cat_background6"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:text="Pepperoni pizza"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivCategory1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/pizza" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:text="$"
            android:layout_marginTop="34dp"
            android:textStyle="bold"
            android:textColor="#FF4500"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:text="15.50"
            android:layout_marginTop="34dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="33dp"
            android:layout_gravity="center|bottom"
            android:backgroundTint="#FF8C00"
            android:layout_marginBottom="3dp"
            android:text="+Add"
            android:textSize="11dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

