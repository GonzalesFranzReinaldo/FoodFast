<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background_intro"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@+id/imageView4"
        app:layout_anchorGravity="center"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FoodFast"
        android:textStyle="bold"
        android:textSize="60sp"
        android:textColor="#6F08BF"
        android:layout_gravity="center"
        android:layout_marginBottom="580sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Delivery"
        android:textStyle="bold"
        android:textSize="45dp"
        android:textColor="#6F08BF"
        android:layout_gravity="center"
        android:layout_marginTop="325dp"/>

    <Button
        android:id="@+id/buttonIniciar"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="710dp"
        android:backgroundTint="#FF8C00"
        android:text="Iniciar"
        android:textSize="27dp" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
